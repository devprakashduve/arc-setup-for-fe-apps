{
  "manifest_version": 3,
  "name": "My Extension",
  "version": "1.0",
  "description": "A simple Next.js Chrome extension",
  "action": {
    "default_popup": "index.html",
    "default_icon": "images/icon.png"
  },

  "permissions": ["activeTab"],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self';"
  }
}
